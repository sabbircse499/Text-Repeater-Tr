<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    tools:context=".MainActivity"
    android:padding="20dp">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Text Repeter Tr"
        android:textStyle="bold"
        android:textSize="20dp"
        android:gravity="start"
        android:paddingLeft="20dp"
        />

    <TextView
        android:id="@+id/marqueeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You are most wellcome in our application.You can use this app to break your loved one's anger  "
        android:textColor="#000000"
        android:background="#FFFFFF"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:scrollHorizontally="true"
        android:textSize="20sp"
        android:padding="10dp" />

    <EditText
        android:id="@+id/edname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Your Think"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:background="#4CAF50"
        android:layout_margin="20dp"
        android:paddingLeft="40dp"
        android:gravity="center"
        android:textSize="20dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        >
    <EditText
        android:id="@+id/ednumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Repetation number"
        android:inputType="number"
        android:padding="10dp"
        android:background="#4CAF50"


        android:gravity="center"
        android:textSize="18dp"
        android:layout_weight="2"
        />

        <CheckBox
            android:layout_marginLeft="30dp"
            android:id="@+id/check01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" New line "
            android:layout_weight="1"
            />

    </LinearLayout>

    <Button
        android:id="@+id/repeat01"
        android:layout_width="191dp"
        android:layout_height="101dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="Repeat"
        android:layout_marginTop="20dp"
        />




        <Button
            android:id="@+id/btcopy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="copy"
            android:paddingLeft="20dp"
   android:layout_marginLeft="20dp"
            />

<!--    Repeted text here -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" "
            android:background="@drawable/border"
            android:padding="10dp"
            android:scrollbars="vertical" />
    </ScrollView>



</LinearLayout>